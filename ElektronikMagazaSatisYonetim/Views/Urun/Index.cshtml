@using EntityLayer.Models
@model List<Urun>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürünler</h1>

<a class="btn btn-primary" asp-action="UrunEkle">Yeni Ürün Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Kategori</th>
            <th>Marka</th>
            <th>Fiyat</th>
            <th>Resim</th>
            <th>İşlemler</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td>@item.Kategori?.Ad</td>
                <td>@item.Marka?.Ad</td>
                <td>@item.Fiyat ₺</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ResimURL))
                    {
                        <img src="@item.ResimURL" alt="Ürün Resmi" width="100" height="100" />
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    <a asp-action="UrunGuncelle"  class="btn btn-sm btn-warning">Güncelle</a>
                    <a asp-action="UrunSil" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
