@model EntityLayer.Models.Urun
@{
    ViewData["Title"] = "Ürün Güncelle";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Güncelleme</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="UrunGuncelle" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ResimURL" />

            <div class="form-group mb-3">
                <label asp-for="Ad" class="control-label">Ürün Adı</label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="KategoriID" class="control-label">Kategori</label>
                <select asp-for="KategoriID" class="form-control" asp-items="ViewBag.Kategoriler"></select>
                <span asp-validation-for="KategoriID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MarkaID" class="control-label">Marka</label>
                <select asp-for="MarkaID" class="form-control" asp-items="ViewBag.Markalar"></select>
                <span asp-validation-for="MarkaID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Fiyat" class="control-label">Fiyat</label>
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>

           
            <div class="form-group mb-3">
                <label for="resimDosyasi" class="control-label">Resim</label>
                <input type="file" id="resimDosyasi" name="resimDosyasi" class="form-control" accept="image/*" />
                <small class="form-text text-muted">Maksimum dosya boyutu: 5MB</small>
            </div>

            @if (!string.IsNullOrEmpty(Model.ResimURL))
            {
                <div class="form-group mb-3">
                    <label class="control-label">Mevcut Resim</label>
                    <div>
                        <img src="@Model.ResimURL" alt="Ürün Resmi" width="200" class="img-thumbnail" />
                    </div>
                    <small class="form-text text-muted">Yeni bir resim yüklerseniz mevcut resim silinecektir.</small>
                </div>
            }

            

            <div class="form-group mb-4">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Form doğrulama için JavaScript
        $(document).ready(function () {
            // Dosya boyutu kontrolü
            $("#resimDosyasi").on("change", function () {
                const fileSize = this.files[0]?.size / 1024 / 1024; // MB cinsinden
                if (fileSize > 5) {
                    alert("Dosya boyutu 5 MB'dan büyük olamaz!");
                    this.value = ""; // Dosya seçimini temizle
                }
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}