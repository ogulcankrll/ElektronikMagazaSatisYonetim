@model EntityLayer.Models.Urun

@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Ekle</h1>

<form asp-action="UrunEkle" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
    </div>

    <div class="form-group">
        <label>Kategori</label>
        <select asp-for="KategoriID" class="form-control" asp-items="ViewBag.Kategoriler">
            <option value="">Kategori Seçin</option>
        </select>
    </div>

    <div class="form-group">
        <label>Marka</label>
        <select asp-for="MarkaID" class="form-control" asp-items="ViewBag.Markalar">
            <option value="">Marka Seçin</option>
        </select>
    </div>

    <div class="form-group">
        <label>Fiyat</label>
        <input asp-for="Fiyat" class="form-control" />
    </div>

    <div class="form-group">
        <label>Resim Seçin</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
