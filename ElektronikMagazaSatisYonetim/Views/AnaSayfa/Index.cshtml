@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Yönetim Paneli</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><i class="fas fa-home"></i></li>
        <li class="breadcrumb-item active">Ana Sayfa</li>
    </ol>

    <!-- İstatistik Kartları -->
    <div class="row">
        <div class="col-xl-4 col-md-6">
            <div class="card bg-primary text-white mb-4 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-box fa-2x me-3"></i>
                    <div>
                        <h4 class="mb-0">@ViewBag.UrunSayisi</h4>
                        <div>Toplam Ürün</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Urun" asp-action="Index">Detaylar</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6">
            <div class="card bg-success text-white mb-4 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-users fa-2x me-3"></i>
                    <div>
                        <h4 class="mb-0">@ViewBag.MusteriSayisi</h4>
                        <div>Toplam Müşteri</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Musteri" asp-action="Index">Detaylar</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6">
            <div class="card bg-warning text-white mb-4 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-user-tie fa-2x me-3"></i>
                    <div>
                        <h4 class="mb-0">@ViewBag.PersonelSayisi</h4>
                        <div>Toplam Personel</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Personel" asp-action="Index">Detaylar</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Grafik -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <i class="fas fa-chart-line me-1"></i>
                    Aylık İstatistik Grafiği
                </div>
                <div class="card-body">
                    <canvas id="statsChart" height="225"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <i class="fas fa-tasks me-1"></i> Hızlı İşlemler
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Urun" asp-action="Ekle" class="btn btn-primary w-100 py-2">
                                <i class="fas fa-plus-circle me-2"></i>
                                Yeni Ürün Ekle
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Musteri" asp-action="Ekle" class="btn btn-success w-100 py-2">
                                <i class="fas fa-user-plus me-2"></i>
                                Yeni Müşteri Ekle
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Personel" asp-action="Ekle" class="btn btn-warning w-100 py-2 text-white">
                                <i class="fas fa-user-tie me-2"></i>
                                Yeni Personel Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>
        // İstatistik Grafiği
        var ctx = document.getElementById('statsChart').getContext('2d');
        var statsChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs', 'Haziran'],
                datasets: [
                    {
                        label: 'Ürünler',
                        data: [65, 70, 80, 81, 85, 90],
                        backgroundColor: 'rgba(54, 162, 235, 0.6)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Müşteriler',
                        data: [28, 35, 40, 45, 50, 58],
                        backgroundColor: 'rgba(40, 167, 69, 0.6)',
                        borderColor: 'rgba(40, 167, 69, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Personel',
                        data: [10, 12, 15, 15, 16, 18],
                        backgroundColor: 'rgba(255, 193, 7, 0.6)',
                        borderColor: 'rgba(255, 193, 7, 1)',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });
    </script>
}