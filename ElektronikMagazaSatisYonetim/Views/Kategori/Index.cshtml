@model List<EntityLayer.Models.Kategori>

@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}


<h2>Kategori Listesi</h2>

<a asp-action="KategoriEkle" class="btn btn-primary mb-3">Yeni Kategori Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <td>@kategori.Ad</td>
                <td>
                    <a asp-controller="Kategori" asp-action="KategoriGuncelle" asp-route-id="@kategori.Id" class="btn btn-warning">Güncelle</a>

                    <a asp-action="KategoriSil" asp-route-id="@kategori.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
