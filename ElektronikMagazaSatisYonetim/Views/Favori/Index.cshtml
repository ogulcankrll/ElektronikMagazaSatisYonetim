@model List<EntityLayer.Models.Favori>
@{
    ViewBag.Title = "Favorilerim";
    Layout = "~/Views/Shared/_MusteriLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="fw-bold text-primary">Favorilerim</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                <li class="breadcrumb-item"><a href="/Eticaret/Urunler">Ürünler</a></li>
                <li class="breadcrumb-item active" aria-current="page">Favorilerim</li>
            </ol>
        </nav>
    </div>
</div>

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Mesaj"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Count == 0)
{
    <div class="row">
        <div class="col-12 text-center py-5">
            <div class="mb-4">
                <i class="far fa-heart text-muted" style="font-size: 5rem;"></i>
            </div>
            <h3 class="text-muted">Henüz favori ürününüz bulunmuyor</h3>
            <p class="mb-4">Beğendiğiniz ürünleri favorilere ekleyerek daha sonra kolayca ulaşabilirsiniz.</p>
            <a href="@Url.Action("Urunler", "Eticaret")" class="btn btn-primary">
                <i class="fas fa-shopping-bag me-2"></i>Alışverişe Başla
            </a>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var favori in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(favori.Urun?.ResimURL))
                        {
                            <img src="@favori.Urun.ResimURL" class="card-img-top" alt="@favori.Urun.Ad" style="height: 240px; object-fit: contain;" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/300x240?text=Ürün+Görseli" class="card-img-top" alt="@favori.Urun?.Ad" />
                        }
                        <a href="@Url.Action("FavoriSil", "Favori", new { favoriId = favori.Id, musteriId = favori.MusteriID })"
                           class="btn btn-sm position-absolute top-0 end-0 m-2 bg-white rounded-circle p-2 shadow-sm"
                           data-bs-toggle="tooltip"
                           title="Favorilerden Çıkar"
                           onclick="return confirm('Bu ürünü favorilerinizden çıkarmak istediğinize emin misiniz?');">
                            <i class="fas fa-heart text-danger"></i>
                        </a>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <span class="badge badge-category me-1">@favori.Urun?.Kategori?.Ad</span>
                            <span class="badge badge-brand">@favori.Urun?.Marka?.Ad</span>
                        </div>
                        <h5 class="card-title">@favori.Urun?.Ad</h5>
                        <div class="d-flex mt-2">
                            <p class="price mb-0">@(favori.Urun?.Fiyat.ToString("N2")) ₺</p>
                            @if (favori.Urun?.UrunVaryasyonlari != null && favori.Urun.UrunVaryasyonlari.Any())
                            {
                                <span class="ms-auto badge bg-info text-white">@favori.Urun.UrunVaryasyonlari.Count varyasyon</span>
                            }
                        </div>
                        <div class="mt-auto pt-3">
                            <div class="d-flex">
                                <a href="@Url.Action("Detay", "Eticaret", new { id = favori.Urun?.Id })" class="btn btn-outline-primary flex-grow-1 me-2">
                                    <i class="fas fa-info-circle me-1"></i> Detay
                                </a>
                                <button class="btn btn-primary">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}