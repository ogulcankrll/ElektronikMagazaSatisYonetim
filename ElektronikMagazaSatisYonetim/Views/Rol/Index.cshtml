@model List<EntityLayer.Models.Rol>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h2>Rol Listesi</h2>

<a class="btn btn-primary" asp-action="RolEkle">Yeni Rol Ekle</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Rol Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rol in Model)
        {
            <tr>
                <td>@rol.Id</td>
                <td>@rol.RolAdi</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="RolGuncelle" asp-route-id="@rol.Id">Güncelle</a>
                    <a class="btn btn-danger btn-sm" asp-action="RolSil" asp-route-id="@rol.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

