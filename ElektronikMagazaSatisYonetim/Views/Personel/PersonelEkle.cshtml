@model EntityLayer.Models.Personel

@{
    ViewData["Title"] = "Yeni Personel Ekle";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
   
}

<h2>Personel Ekle</h2>

<form asp-action="PersonelEkle" method="post">
    <div class="form-group">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Soyad"></label>
        <input asp-for="Soyad" class="form-control" />
        <span asp-validation-for="Soyad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Eposta"></label>
        <input asp-for="Eposta" type="email" class="form-control" />
        <span asp-validation-for="Eposta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sifre"></label>
        <input asp-for="Sifre" type="password" class="form-control" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefon"></label>
        <input asp-for="Telefon" class="form-control" />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RolID"></label>
        <select asp-for="RolID" asp-items="ViewBag.Roller" class="form-control"></select>
        <span asp-validation-for="RolID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}