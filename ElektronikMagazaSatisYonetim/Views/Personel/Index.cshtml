@model IEnumerable<EntityLayer.Models.Personel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h2>Personel Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Eposta</th>
            <th>Telefon</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr>
                <td>@personel.Ad</td>
                <td>@personel.Soyad</td>
                <td>@personel.Eposta</td>
                <td>@personel.Telefon</td>
                <td>@personel.Rol?.RolAdi</td> 
                <td>
                    <a href="@Url.Action("Guncelle", "Personel", new { id = personel.Id })" class="btn btn-primary">Güncelle</a>
                    <a href="@Url.Action("Sil", "Personel", new { id = personel.Id })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Ekle", "Personel")" class="btn btn-success">Yeni Personel Ekle</a>

