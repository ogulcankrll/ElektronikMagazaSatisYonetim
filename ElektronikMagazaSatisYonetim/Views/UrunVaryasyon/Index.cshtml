@model List<EntityLayer.Models.UrunVaryasyon>

@{
    ViewData["Title"] = "Varyasyon Listesi";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<!-- Yeni varyasyon ekleme butonu -->
<a href="@Url.Action("VaryasyonEkle")" class="btn btn-primary mb-3">Yeni Varyasyon Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Varyasyon Adı</th>
            <th>Ürün Adı</th>
            <th>Ek Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var varyasyon in Model)
        {
            <tr>
                <td>@varyasyon.VaryasyonAdi</td>
                <td>@varyasyon.Urun.Ad</td>
                <td>@varyasyon.EkFiyat</td>
                <td>
                    <a href="@Url.Action("VaryasyonGuncelle", new { id = varyasyon.Id })" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="@Url.Action("Sil", new { id = varyasyon.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinizden emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>