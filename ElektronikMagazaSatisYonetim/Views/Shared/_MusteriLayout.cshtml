@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - AkcakocaTech Elektronik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary: #0056b3;
            --secondary: #6c757d;
            --accent: #ffc107;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .top-bar {
            background-color: var(--primary);
            color: white;
            font-size: 0.9rem;
            padding: 8px 0;
        }

        .navbar {
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 0.5rem 1rem;
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.4rem;
        }

        .navbar .nav-link {
            font-weight: 500;
            padding: 0.8rem 1rem !important;
            transition: all 0.3s;
        }

            .navbar .nav-link:hover {
                color: var(--primary) !important;
            }

        .search-box {
            border-radius: 30px;
            border: 1px solid #ddd;
            padding-right: 40px;
        }

        .search-btn {
            position: absolute;
            right: 5px;
            top: 5px;
            border: none;
            background: none;
            color: var(--primary);
        }

        .card {
            transition: transform 0.3s, box-shadow 0.3s;
            border: none;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .card-title {
            font-weight: 600;
            font-size: 1.1rem;
        }

        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
            padding: 8px 20px;
            border-radius: 4px;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #004494;
                border-color: #004494;
            }

        .btn-outline-primary {
            color: var(--primary);
            border-color: var(--primary);
            padding: 8px 20px;
            border-radius: 4px;
            transition: all 0.3s;
        }

            .btn-outline-primary:hover {
                background-color: var(--primary);
                color: white;
            }

        footer {
            background-color: #343a40;
            color: #f8f9fa;
            padding: 3rem 0 1.5rem 0;
        }

        .footer-links h5 {
            color: white;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .footer-links ul {
            list-style: none;
            padding: 0;
        }

        .footer-links li {
            margin-bottom: 10px;
        }

        .footer-links a {
            color: #ccc;
            text-decoration: none;
            transition: color 0.3s;
        }

            .footer-links a:hover {
                color: white;
                text-decoration: none;
            }

        .copyright {
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 20px;
            margin-top: 30px;
        }

        .social-icons a {
            display: inline-block;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background-color: rgba(255,255,255,0.1);
            color: white;
            text-align: center;
            line-height: 36px;
            margin-right: 10px;
            transition: all 0.3s;
        }

            .social-icons a:hover {
                background-color: var(--primary);
                transform: translateY(-3px);
            }

        .price {
            color: var(--primary);
            font-weight: 700;
            font-size: 1.2rem;
        }

        .badge-category {
            background-color: #e9ecef;
            color: #495057;
            font-weight: 500;
        }

        .badge-brand {
            background-color: #e7f5ff;
            color: var(--primary);
            font-weight: 500;
        }

        .product-detail-card {
            border: none;
            box-shadow: 0 3px 15px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <span class="me-3"><i class="fas fa-phone-alt me-1"></i> 0380 123 45 67</span>
                <span><i class="fas fa-envelope me-1"></i> info@akcakocatech.com</span>
            </div>
            <div>
                @if (ViewBag.MusteriAdSoyad != null)
                {
                    <span class="text-white me-3">
                        <i class="fas fa-user me-1"></i> Hoşgeldiniz, @ViewBag.MusteriAdSoyad
                    </span>
                    <a href="@Url.Action("Cikis", "MusteriGiris")" class="text-white me-3">
                        <i class="fas fa-sign-out-alt me-1"></i> Çıkış Yap
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Giris", "MusteriGiris")" class="text-white me-3">
                        <i class="fas fa-user me-1"></i> Giriş Yap
                    </a>
                    <a href="@Url.Action("Kayit", "MusteriGiris")" class="text-white me-3">
                        <i class="fas fa-user me-1"></i> Üye Ol
                    </a>
                }
               
            </div>
        </div>
    </div>

    <!-- Header -->
    <header class="bg-white py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3 mb-3 mb-md-0">
                    <a href="/" class="text-decoration-none">
                        <h1 class="h3 text-primary m-0">AkcakocaTech Elektronik</h1>
                    </a>
                </div>
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="position-relative">
                        <input type="text" class="form-control search-box" placeholder="Ne aramıştınız?">
                        <button class="search-btn"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="col-md-3 text-end">
                    <a href="#" class="btn btn-outline-primary me-2"><i class="fas fa-heart me-1"></i> Favoriler</a>
                    <a href="#" class="btn btn-primary"><i class="fas fa-shopping-cart me-1"></i> Sepet</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home me-1"></i> Anasayfa</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-laptop me-1"></i> Ürün Kategorileri
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Bilgisayarlar</a></li>
                            <li><a class="dropdown-item" href="#">Telefonlar</a></li>
                            <li><a class="dropdown-item" href="#">Televizyonlar</a></li>
                            <li><a class="dropdown-item" href="#">Aksesuarlar</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-percentage me-1"></i> Kampanyalar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-building me-1"></i> Kurumsal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-headset me-1"></i> Müşteri Hizmetleri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-phone me-1"></i> İletişim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row footer-links">
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5>TechPro Elektronik</h5>
                    <p class="text-muted">Teknoloji dünyasının güvenilir adresi. 10 yılı aşkın tecrübemizle en kaliteli ürünleri en uygun fiyatlarla sunuyoruz.</p>
                    <div class="social-icons mt-3">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5>Kurumsal</h5>
                    <ul>
                        <li><a href="#">Hakkımızda</a></li>
                        <li><a href="#">Kariyer</a></li>
                        <li><a href="#">Mağazalarımız</a></li>
                        <li><a href="#">Basın</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5>Müşteri Hizmetleri</h5>
                    <ul>
                        <li><a href="#">Sık Sorulan Sorular</a></li>
                        <li><a href="#">İade ve Değişim</a></li>
                        <li><a href="#">Garanti Koşulları</a></li>
                        <li><a href="#">Servis Noktaları</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>İletişim</h5>
                    <ul>
                        <li><i class="fas fa-map-marker-alt me-2"></i>Osmaniye, Kumluk Sk. 12/BA, 81650 Akçakoca/Düzce</li>
                        <li><i class="fas fa-phone-alt me-2"></i> 0380 123 45 67</li>
                        <li><i class="fas fa-envelope me-2"></i> info@akcakoca.com</li>
                    </ul>
                    <div class="mt-3">
                        <img src="https://via.placeholder.com/50x30" alt="Ödeme Yöntemi" class="me-2">
                        <img src="https://via.placeholder.com/50x30" alt="Ödeme Yöntemi" class="me-2">
                        <img src="https://via.placeholder.com/50x30" alt="Ödeme Yöntemi">
                    </div>
                </div>
            </div>
            <div class="text-center copyright">
                <p class="mb-0">© 2025 AkçakocaTech Elektronik - Tüm Hakları Saklıdır</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>