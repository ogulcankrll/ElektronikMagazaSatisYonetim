@model List<EntityLayer.Models.Urun>
@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_MusteriLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="fw-bold text-primary">Ürünlerimiz</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ürünler</li>
            </ol>
        </nav>
    </div>
    <div class="col-md-6">
        <div class="d-flex justify-content-md-end">
            <div class="dropdown me-3">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="kategoriFiltreBtn" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-filter me-1"></i> Kategori
                </button>
                <ul class="dropdown-menu" aria-labelledby="kategoriFiltreBtn">
                    <li><a class="dropdown-item" href="#">Tüm Kategoriler</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Bilgisayarlar</a></li>
                    <li><a class="dropdown-item" href="#">Telefonlar</a></li>
                    <li><a class="dropdown-item" href="#">Televizyonlar</a></li>
                </ul>
            </div>
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="siralamaBtn" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-sort me-1"></i> Sıralama
                </button>
                <ul class="dropdown-menu" aria-labelledby="siralamaBtn">
                    <li><a class="dropdown-item" href="#">Fiyat: Artan</a></li>
                    <li><a class="dropdown-item" href="#">Fiyat: Azalan</a></li>
                    <li><a class="dropdown-item" href="#">İsim: A-Z</a></li>
                    <li><a class="dropdown-item" href="#">İsim: Z-A</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var urun in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="position-relative">
                    @if (!string.IsNullOrEmpty(urun.ResimURL))
                    {
                        <img src="@urun.ResimURL" class="card-img-top" alt="@urun.Ad" style="height: 240px; object-fit: contain;" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/300x240?text=Ürün+Görseli" class="card-img-top" alt="@urun.Ad" />
                    }

                    <!-- Favorilere Ekle Butonu -->
                    <a href="@Url.Action("FavoriEkle", "Favori", new { musteriId = ViewBag.MusteriID, urunId = urun.Id })"
                       class="btn btn-sm position-absolute top-0 end-0 m-2 bg-white rounded-circle p-2 shadow-sm"
                       data-bs-toggle="tooltip" title="Favorilere Ekle">
                        <i class="far fa-heart text-danger"></i>
                    </a>
                </div>

                <div class="card-body d-flex flex-column">
                    <div class="mb-2">
                        <span class="badge badge-category me-1">@urun.Kategori?.Ad</span>
                        <span class="badge badge-brand">@urun.Marka?.Ad</span>
                    </div>
                    <h5 class="card-title">@urun.Ad</h5>
                    <div class="d-flex mt-2">
                        <p class="price mb-0">@urun.Fiyat.ToString("N2") ₺</p>
                        @if (urun.UrunVaryasyonlari != null && urun.UrunVaryasyonlari.Any())
                        {
                            <span class="ms-auto badge bg-info text-white">@urun.UrunVaryasyonlari.Count varyasyon</span>
                        }
                    </div>
                    <div class="mt-auto pt-3">
                        <div class="d-flex">
                            <a href="@Url.Action("Detay", "Eticaret", new { id = urun.Id })" class="btn btn-outline-primary flex-grow-1 me-2">
                                <i class="fas fa-info-circle me-1"></i> Detay
                            </a>
                            <button class="btn btn-primary">
                                <i class="fas fa-shopping-cart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<nav aria-label="Sayfalama" class="my-4">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Önceki</a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Sonraki</a>
        </li>
    </ul>
</nav>